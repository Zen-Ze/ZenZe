<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_rainy"
    android:orientation="vertical"
    tools:context="com.ucd.comp41690.team21.zenze.activities.Setting">


    <LinearLayout
        android:layout_width="440dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="20dp"
            android:text="@string/graphics_spinner_textview"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ToggleButton
            android:id="@+id/graphic_switch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:text="@string/dummy_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="20dp"
            android:text="@string/weather_spinner_textview"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />


        <Spinner
            android:id="@+id/te"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginStart="100dp"
            android:background="@color/white"
            android:textAlignment="center" />

    </LinearLayout>
</LinearLayout>
